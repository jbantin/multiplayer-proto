{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "./public/dist",
    "rootDir": "./public",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": false,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "../types": ["./types.ts"]
    }
  },
  "include": ["public/**/*.ts"],
  "exclude": ["node_modules", "dist", "public/dist"]
}
